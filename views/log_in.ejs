<%- include("partials/header") -%>

<div class="text-center">
    <form class="form-signin" method="post" action="/instagram-project/insights">
        <i id="instagram-logo" class="mb4 fab fa-instagram-square fa-5x" style="color: #E1306C;"></i>
        <h1 class="h3 mb-3 font-weight-normal">Sign in to your Instagram</h1>
        <input type="text" name="username" autocomplete="off" class="top form-control" placeholder="Username" required
            autofocus>
        <input type="password" name="password" class="bottom form-control" placeholder="Password" required>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Get Insights!</button>
    </form>
</div>

<%- include("partials/footer") -%>